{% if pillar.monitor.pagerduty.api_key %}
   {%- set HANDLERS = '"mailer-ses"' -%}
{% else %}
   {%- set HANDLERS = '"mailer-ses", "pagerduty"' -%}
{% endif %}
{
  "checks": {
    "load_check": {
      "handlers": ["default"],
      "command": "/etc/sensu/plugins/check-load.rb",
      "interval": 60,
      "subscribers": [ "all" ]
    },
    "mem_check": {
      "handlers": ["default"],
      "command": "/etc/sensu/plugins/check-mem.sh",
      "interval": 60,
      "subscribers": [ "all" ]
    },
    "disk_metrics": {
      "handlers": ["graphite-tcp"],
      "type": "metric",
      "command": "/etc/sensu/plugins/disk-usage-metrics.rb --scheme sensu.:::name:::",
      "interval": 60,
      "subscribers": [ "all" ]
    },
    "vmstat_metrics": {
      "handlers": ["graphite-tcp" ],
      "type": "metric",
      "command": "/etc/sensu/plugins/vmstat-metrics.rb --scheme sensu.:::name:::",
      "interval": 60,
      "subscribers": [ "all" ]
    },
    "fs_checks": {
      "handlers": [ {{ HANDLERS }} ],
      "command": "/opt/sensu/embedded/bin/check-disk-usage.rb -w 75 -c 85",
      "interval": 60,
      "subscribers": ["all"]
    }
  }
}
